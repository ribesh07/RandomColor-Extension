{
  "manifest_version": 3,
  "name": "Random Color Picker - RZ",
  "version": "1.0",
  "description": "A simple random color picker - Ribesh",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "clipboardWrite"
  ]
}